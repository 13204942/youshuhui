extends layout

block content

	a(class='button btn btn-light' href='/') Home
	
	dib(class='row')
		div(class='col')
		div(class='col')

			h1 #{title}

			form
				div(class='form-group')
					label User Name
					input(type='text' class='form-control' id='inputUserName' placeholder='Enter user name')
				div(class='form-group')
					label Password
					input(type='password' class='form-control' id='inputPassword' placeholder='Password')
				button(type='submit' class='btn btn-light') Submit
		div(class='col')